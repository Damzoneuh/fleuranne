{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} Admin News{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6 col-sm-12">
                <div class="p-sm-1 p-5">
                    <div class="bg-grey-inherit rounded shadow mt-3">
                       <table class="table table-striped bg-pink-inherit table-responsive-sm text-grey font-weight-bold">
                           <tbody>
                           {% for new in news %}
                                <tr>
                                    <td>
                                        {{ new.title }}
                                    </td>
                                    <td class="text-right">
                                        <a href="{{ path('admin_edit_news', {id: new.id}) }}" class="m-2"><i class="fas fa-pen text-info"></i></a>
                                        <a href="{{ path('admin_delete_news', {id: new.id}) }}" class="m-2"><i class="fas fa-trash text-danger"></i></a>
                                    </td>
                                </tr>
                           {% endfor %}
                           </tbody>
                       </table>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 col-sm-12">
                <div class="p-sm-1 p-5">
                    <div class="bg-grey-inherit rounded shadow mt-3 mb-3 p-sm-2 p-5 text-pink text-center">
                        <h1 class="h3 text-pink mt-3 mb-3">Ajouter une actualit√©</h1>
                        {{ form_start(form) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% block javascripts %}{{ parent() }}{% endblock %}